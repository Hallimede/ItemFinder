<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_gray"
    tools:context="com.example.t.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lock_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="输入解锁密码"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_size_medium"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/lock_1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="20dp"
                android:background="@drawable/white_point"
                android:gravity="center" />

            <View
                android:id="@+id/lock_2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="20dp"
                android:background="@drawable/white_point"
                android:gravity="center" />

            <View
                android:id="@+id/lock_3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="20dp"
                android:background="@drawable/white_point"
                android:gravity="center" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/digit_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_selector_digit"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/font_size_big_large" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/digit_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_selector_digit"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/font_size_big_large" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/digit_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_selector_digit"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/font_size_big_large" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/digit_4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_selector_digit"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/font_size_big_large" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/digit_5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_selector_digit"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/font_size_big_large" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/digit_6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_selector_digit"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/font_size_big_large" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/digit_7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_selector_digit"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/font_size_big_large" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/digit_8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_selector_digit"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/font_size_big_large" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/digit_9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_selector_digit"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/font_size_big_large" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/digit_0"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_selector_digit"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/font_size_big_large" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:text="删除"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_size_medium"
            android:visibility="gone" />

        <Button
            android:id="@+id/fingerprint_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="70dp"
            android:background="@drawable/btn_selector"
            android:text="使用指纹"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_medium" />

        <TextView
            android:id="@+id/forget_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp"
            android:text="忘记密码"
            android:textColor="?attr/colorPrimary"
            android:textSize="@dimen/font_size_medium" />
    </LinearLayout>

</RelativeLayout>
